@model Esmeralda.Models.Meal

@{
    ViewBag.Title = "Editar";
}
@Html.Partial("_HeaderBar")
@Html.Partial("_AdminBar")
     <div class="main">
        <div class="row">
            <div class="col-lg-12">
                <h5> EDITAR ALIMENTO </h5>
            </div>
        </div>
        <div class="col-md-6 col-md-offset-3 col-xs-8 col-xs-offset-2">
            <form asp-controller="Admin" asp-action="Update" method="post" asp-route-id="@Model.MealId">
                <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>Nombre de alimento</label>
                    <input asp-for="MealName" class="form-control" />
                    <span asp-validation-for="MealName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Descripción</label>
                    <textarea class="materialize-textarea" asp-for="Description" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Precio</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Calorias</label>
                    <input asp-for="Cal" class="form-control" />
                    <span asp-validation-for="Cal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Categoria de alimento</label>
                    <select class="browser-default" asp-for="CategoryId" asp-items="@ViewBag.Category" class="form-control"></select>
                </div>
                @*<div class="form-group">
                        <label asp-for="Estimation">Estimacion</label>
                        <input asp-for="Estimation" class="form-control"/>
                        <span asp-validation-for="Estimation" class="text-danger"></span>
                    </div>*@
                <button class="btn btn-warning pull-right">
                    <i class="fa fa-pencil fa-fw fa-x2"></i>Editar
                </button>
            </form>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-8 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}