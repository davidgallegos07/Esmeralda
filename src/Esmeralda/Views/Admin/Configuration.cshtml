@model Esmeralda.Models.ApplicationUser
@{
    ViewBag.Title = "Configuration";
}
@Html.Partial("_HeaderBar")
@Html.Partial("_AdminBar")
<div class="main">
    <div class="row">
        <div class="col l12">
            <h5>CONFIGURACION</h5>
        </div>
    </div>
    <div class="row">
        <div class="col s12 m12 l10 offset-l1">
            <div class="row">
                <div class="input-field col s12">
                    <label for="Email">Correo Electronico</label>

                    <input type="email" class="form-control" value="@Model.Email" />
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <label for="password">Contraseña</label>

                    <input type="password" class="form-control" value="*********" />
                </div>
            </div>
            <div class="collapse" id="pass">
                <div class="row">
                    <div class="input-field col s12">
                        <label for="Name">Nombre</label>

                        <input type="text" class="form-control" value="@Model.UserName" />
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <label for="LastName">Dirección</label>

                        <input type="text" class="form-control" value="@Model.Address" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

