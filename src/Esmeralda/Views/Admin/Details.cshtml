@model Esmeralda.Models.Meal
@{
    ViewBag.Title = "Details";
}
<div id="page-wrapper">
    <div class="row" style="background-color:#fbfffe">
        <div class="col-lg-12">
            <h2 class="page-header text-success"> DETALLES ALIMENTO </h2>
        </div>
    </div>
    <hr>
    <!-- /.col-lg-12 -->
    <div class="col-md-6 col-md-offset-3 col-xs-8 col-xs-offset-2">
        <form>
            <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Nombre de Alimento</label>
                <p class="lead">@Model.MealName</p>
            </div>
            <div class="form-group">
                <label>Descripción</label>
                <p>@Model.Description</p>
            </div>
            <div class="form-group">
                <label>Precio</label>
                <p>@Model.Price</p>
            </div>
            <div class="form-group">
                <label>Calorias</label>
                <p>@Model.Cal</p>
            </div>
            <div class="form-group">
                <label>Categoria de alimento</label>
                <select asp-for="@Model.CategoryId" asp-items="@ViewBag.Category" class="form-control" id="disabled" disabled></select>
            </div>
            <div>
                <a asp-action="Manage" class="btn btn-sm btn-default"><i class="fa fa-arrow-left fa-fw"></i> Regresar</a>
            </div>
        </form>
    </div>
</div>



    @section Scripts{
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
