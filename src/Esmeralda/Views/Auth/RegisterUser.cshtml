@model Esmeralda.ViewModels.RegisterUserViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="col-md-4 col-md-offset-4 col-xs-8 col-xs-offset-2">
            <form asp-controller="Auth" asp-action="RegisterUser" method="post">
                <h3 class="text-primary">Registro</h3>
                @ViewBag.Confirmation
                <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
                <span class='payment-errors'></span>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="nombre@ejemplo.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                        <input type="password" asp-for="Password" class="form-control" placeholder="Al menos 6 caracteres"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input type="password" asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CardNumber" class="control-label"></label>
                    <input asp-for="CardNumber" class="form-control"/>
                    <span asp-validation-for="CardNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CardExpirationMonth" class="control-label"></label>
                    <select asp-for="CardExpirationMonth" asp-items="ViewBag.AllMonths" class="form-control"></select>
                    <span asp-validation-for="CardExpirationMonth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CardExpirationYear" class="control-label"></label>
                    <select asp-for="CardExpirationYear" asp-items="ViewBag.AllYears" class="form-control"></select>
                    <span asp-validation-for="CardExpirationYear" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CVC" class="control-label"></label>
                    <input asp-for="CVC" class="form-control" placeholder="123" />
                    <span asp-validation-for="CVC" class="text-danger"></span>
                </div>
                <hr>
                <div>
                    <button class="btn btn-primary btn-block" type="submit"><i class="fa fa-edit fa-fw fa-x2"></i>Registrarme</button>
                </div>
                <hr>
                <div>
                    <p class="text-center">
                        Registrandote en la app gofood
                        Estas Aceptando los <a href="terms&conditions.html">
                            terminos y condiciones
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}