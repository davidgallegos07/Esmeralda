@model IEnumerable<Esmeralda.Models.ApplicationUser>
@{
    ViewBag.Title = "Restaurantes";
}
@Html.Partial("_HeaderBar")

@if (User.IsInRole("Admin"))
{

    @Html.Partial("_AdminBar")
}


@if (User.IsInRole("User"))
{

    @Html.Partial("_UserBar")
}

@if (!User.IsInRole("User") && (!User.IsInRole("Admin")))
{

    @Html.Partial("_DefaultUserBar")
}


<div class="main" ng-app="ui.bootstrap.demo">
    <nav class="navbar-default navbar-static-side" role="navigation">
