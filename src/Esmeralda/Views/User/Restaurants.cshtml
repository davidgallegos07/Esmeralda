                        </div>
                        <div class="user-info">
                            <div class="user-welcome">Bienvenido</div>

                            <div class="username">Usuario: <strong>@User.Identity.Name</strong></div>
                        </div>
                    </div>
                </li>
                <li>
                    <a asp-action="UserPanel" asp-controller="User"><i class="fa fa-envelope fa-fw fa-3x"></i>Ordenes</a>
                </li>
                <li>
                    <a asp-action="Restaurants" asp-controller="User"><i class="fa fa-cutlery fa-fw fa-3x"></i>Restaurantes</a>
                </li>
                <li>
                    <a asp-action="Configuration" asp-controller="User"><i class="fa fa-wrench fa-fw fa-3x"></i>Configuración</a>
                </li>
            </ul>
            <!-- /#side-menu -->
        </div>
